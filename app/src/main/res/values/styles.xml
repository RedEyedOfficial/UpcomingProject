<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="light_theme">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:background">#ffffff</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#000000</item>
    </style>

    <style name="dark_theme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:background">#2c2b2b</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#ffffff</item>
    </style>

    <style name="zero_two_theme">
        <item name="android:colorBackground">#f21d8555</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">#dff4877a</item>
        <item name="android:textColorPrimary">#dff4877a</item>
        <item name="android:textColorSecondary">#dff4877a</item>
        <item name="android:background">#f21d8555</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#dff4877a</item>
    </style>

    <style name="black_theme">
        <item name="android:textColor">#ed0adab4</item>
        <item name="android:textColorPrimary">#ed0adab4</item>
        <item name="android:textColorSecondary">#ed0adab4</item>
        <item name="android:background">#000000</item>
        <item name="android:textColorTertiary">#ffffff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#ed0adab4</item>
        <item name="android:alertDialogTheme">@style/dialog_black</item>
    </style>

    <style name="dialog_black">
        <item name="android:textColorAlertDialogListItem">#ed0adab4</item>
        <item name="android:textColor">#ed0adab4</item>
        <item name="android:textColorPrimary">#ed0adab4</item>
        <item name="android:textColorSecondary">#ed0adab4</item>
    </style>

    <style name="dialog_black_akame">
        <item name="android:textColor">#f6bc1c0a</item>
        <item name="android:textColorPrimary">#f6bc1c0a</item>
        <item name="android:textColorSecondary">#f6bc1c0a</item>
        <item name="android:textColorAlertDialogListItem">#f6bc1c0a</item>
    </style>

    <style name="akame_theme">
        <item name="android:colorBackground">#f6000000</item>
        <item name="android:listDivider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:horizontalDivider">@color/black</item>
        <item name="android:textColor">#f6bc1c0a</item>
        <item name="android:textColorPrimary">#f6bc1c0a</item>
        <item name="android:textColorSecondary">#f6bc1c0a</item>
        <item name="android:background">#f6000000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:alertDialogTheme">@style/dialog_black_akame</item>
        <item name="android:textColorAlertDialogListItem">#f6bc1c0a</item>
    </style>

    <style name="red_eyed_theme">
        <item name="android:colorBackground">#000000</item>
        <item name="android:listDivider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:horizontalDivider">@color/black</item>
        <item name="android:textColor">#b71c1c</item>
        <item name="android:textColorPrimary">#b71c1c</item>
        <item name="android:textColorSecondary">#b71c1c</item>
        <item name="android:background">#000000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#b71c1c</item>
    </style>

    <style name="zero_two_theme_substitute">
        <item name="android:colorBackground">#f21d8555</item>
        <item name="android:listDivider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:horizontalDivider">@color/black</item>
        <item name="android:textColor">#dff4877a</item>
        <item name="android:textColorPrimary">#dff4877a</item>
        <item name="android:textColorSecondary">#dff4877a</item>
        <item name="android:background">#f21d8555</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#f6bc1c0a</item>
    </style>

    <style name="black_theme_lm">
        <item name="android:textColor">#66ffff</item>
        <item name="android:textColorPrimary">#66ffff</item>
        <item name="android:textColorSecondary">#66ffff</item>
        <item name="android:background">#000000</item>
        <item name="android:textColorTertiary">#66ffff</item>
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorAlertDialogListItem">#66ffff</item>
    </style>

    <style name="DialogStyle">
        <item name="android:textColor">#66ffff</item>
        <item name="android:textColorPrimary">#66ffff</item>
        <item name="android:textColorSecondary">#66ffff</item>
        <item name="android:textColorAlertDialogListItem">#66ffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
