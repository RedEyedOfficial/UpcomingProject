<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/strelizia">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ivanquish"
        android:layout_marginTop="5dp"
        android:theme="@style/vanquish"
        android:scaleType="centerInside"
        android:src="@drawable/strelitzia"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvanquish"
        android:layout_marginTop="5dp"
        android:theme="@style/vanquish">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/titlevanquish"/>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svanquish"
        android:layout_marginTop="10dp"
        android:theme="@style/vanquish">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="normal"
                android:textSize="20sp"
                android:id="@+id/lyricvanquish"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>